<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>Results</title>
</head>

<body>
    <h1>Results</h1>
    <form action="/movies/search" method="POST">
        <label for="search">Search:</label>
        <input type="text" name="search">
        <button type="submit">Search</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Director</th>
                <th>Year</th>
                <th>Genres</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% movies.forEach(function(movie) { %>
                <tr>
                    <td>
                        <%= movie.name %>
                    </td>
                    <td>
                        <%= movie.director %>
                    </td>
                    <td>
                        <%= movie.year %>
                    </td>
                    <td>
                        <%= movie.genre_1 %> <%= movie.genre_2 %>
                    </td>
                    <td>
                        <a href="/movies/edit/<%= movie.id %>">Edit</a>
                        <form action="/movies/delete/<%= movie.id %>" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
        
    </table>
<a href="/movies/add">Add a Movie</a>

</body>

</html>